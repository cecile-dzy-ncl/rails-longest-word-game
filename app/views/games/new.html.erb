<h1>New game</h1>

<div class="container">
  <div class="row">
    <% @letters.each do |letter| %>
      <div class="col-sm-1" id="letters">
        <p><%= letter %></p>
      </div>
    <% end %>
  </div>
</div>

<div class="container form">
  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag "letters", @letters %>
    <input class="form-control input-lg" type="text" name="word" placeholder="Word">
    <button type="submit" class="btn btn-blue" value="Play">Play</button>
  </form>
</div>
<!-- The new action will be used to display a new random grid and a form.
The form will be submitted (with POST) to the score action. -->
